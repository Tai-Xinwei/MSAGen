{
  "train_batch_size": 64,
  "train_micro_batch_size_per_gpu": 1,
  "gradient_accumulation_steps": 16,
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0.00002,
      "betas": [
        0.9,
        0.999
      ],
      "eps": 1e-8,
      "weight_decay": 0.0
    }
  },
  "scheduler": {
    "type": "WarmupDecayLR",
    "params": {
      "total_num_steps": 1000000,
      "warmup_max_lr": 0.00002,
      "warmup_num_steps": 60000
    }
  },
  "fp16": {
    "enabled": true
  },
  "zero_optimization": {
    "stage": 1,
    "ignore_unused_parameters": true,
    "contiguous_gradients": true,
    "reduce_scatter": false
  },
  "gradient_clipping": 1.0,
  "comms_logger": {
    "enabled": false,
    "verbose": false,
    "prof_all": false,
    "debug": false
  },
  "steps_per_output": 10000,
  "flops_profiler": {
    "enabled": false,
    "profile_step": 100,
    "module_depth": -1,
    "top_modules": 3,
    "detailed": true
  },
  "csv_monitor": {
    "enabled": true,
    "output_path": "output/ds_logs/",
    "job_name": "PCQv2_lMFM"
  }
}
