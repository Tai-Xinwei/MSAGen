{
  "train_batch_size": 8,
  "gradient_accumulation_steps": 1,
  "zero_optimization": {
    "stage": 1
  },
  "fp16": {
    "enabled": true
  },
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0.0001,
      "betas": [
        0.9,
        0.999
      ],
      "eps": 1e-8,
      "weight_decay": 0.0
    }
  },
  "scheduler": {
    "type": "WarmupDecayLR",
    "params": {
      "warmup_type": "linear",
      "total_num_steps": 150000,
      "warmup_max_lr": 0.0001,
      "warmup_num_steps": 15000
    }
  },
  "gradient_clipping": 1.0,
  "steps_per_print": 100
}
